# Ansible Inventory for Goldexperte Pimcore
# This file will be generated by Terraform output
# You can also manually configure it based on your server setup

[pimcore_servers]
# Format: hostname ansible_host=IP_ADDRESS ansible_user=root
# Example:
# goldexperte-pimcore-prod ansible_host=1.2.3.4 ansible_user=root

[pimcore_servers:vars]
# These variables will be set by Terraform or manually configured
server_id=
volume_device=/dev/sdb
main_domain=diegoldexperten.com
admin_domain=admin.diegoldexperten.com
api_domain=api.diegoldexperten.com
acme_email=admin@diegoldexperten.com
environment=prod

# Database configuration
mysql_root_password=secure_root_password_here
mysql_pimcore_user=pimcore
mysql_pimcore_password=secure_pimcore_password_here
mysql_pimcore_database=goldexperte_pimcore

# Pimcore admin configuration
pimcore_admin=admin
pimcore_admin_password=secure_admin_password_here

# Git repository configuration (if using private repo)
git_repo_url=https://github.com/yourusername/goldexperte-backend.git
git_branch=main
