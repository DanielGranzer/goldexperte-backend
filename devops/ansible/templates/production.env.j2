# Goldexperte Pimcore Production Environment Configuration
# Generated by Ansible provisioning

# Environment
NODE_ENV=production
PIMCORE_ENVIRONMENT=prod

# Database Configuration
DB_HOST=db
DB_PORT=3306
DB_NAME={{ mysql_pimcore_database }}
DB_USER={{ mysql_pimcore_user }}
DB_PASSWORD={{ mysql_pimcore_password }}
DB_ROOT_PASSWORD={{ mysql_root_password }}

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Elasticsearch Configuration
ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200

# Pimcore Configuration
PIMCORE_ADMIN_USER={{ pimcore_admin }}
PIMCORE_ADMIN_PASSWORD={{ pimcore_admin_password }}

# Email Configuration
MAILER_DSN=smtp://mailhog:1025

# SSL Configuration
ACME_EMAIL={{ acme_email }}

# Domains
MAIN_DOMAIN={{ main_domain }}
ADMIN_DOMAIN={{ admin_domain }}
API_DOMAIN={{ api_domain }}

# Docker User
DOCKER_USER=1000:1000

# Security
APP_SECRET={{ ansible_date_time.epoch }}{{ inventory_hostname }}{{ mysql_pimcore_password | hash('sha256') | truncate(32) }}

# Production specific
DEBUG=false
PHP_MEMORY_LIMIT=1024M

# Data persistence paths
MYSQL_DATA_PATH={{ data_dir }}/mysql
ELASTICSEARCH_DATA_PATH={{ data_dir }}/elasticsearch
REDIS_DATA_PATH={{ data_dir }}/redis
PIMCORE_DATA_PATH={{ data_dir }}/pimcore
LOGS_PATH={{ data_dir }}/logs
SSL_CERTS_PATH={{ data_dir }}/ssl
